
{
	"comment": "based on: https://github.com/microsoft/vscode/blob/main/extensions/python/syntaxes/MagicPython.tmLanguage.json",
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ImageJ Macro Language",
	"patterns": [
		{"include": "#statement"},
		{"include": "#expression"}
	],
	"repository":{
		"statement":{
			"patterns": [
				{"include": "#function-declaration"},
				{"include": "#statement-keyword"},
				{"include": "#assignment-operator"},
			]
		},
		"expression":{
			"patterns": [
				{"include": "#comment"},
				{"include": "#expression-bare"},
			]
		},
		"expression-bare":{
			"patterns": [
				{"include":"literal"}
				{"include":"string"},
				{"include":"list"},
				{"include":"item-access"},
				{"include":"function-call"},
				{"include":"string"},
				{"include":"builtin-functions"},
				{"include":"punctuation"}
			]
		},

		"punctuation":{
			"patterns":[
				{
					"name": "punctuation.separator.element.ijm_macro_language",
					"match": ","
				}
			]
		},

		"literal":{
			"patterns":[
				{
					"name":"constant.language.ijm_macro_language",
					"match":"\\b(true|false)\\b"
				}
			]
		}
	},
	"scopeName": "source.ijm"
}